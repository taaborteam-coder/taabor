rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      // Assuming a custom claim or a specific user list. For now, checking if 'admin' field exists on user profile
      // In production, use Custom Claims
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Businesses
    match /businesses/{businessId} {
      allow read: if true; // Public can view businesses
      allow write: if isAuthenticated() && (isAdmin() || request.auth.uid == resource.data.ownerId);
      allow create: if isAuthenticated(); // Registered users can create a business (become merchant)
    }

    // Bookings / Appointments
    match /appointments/{appointmentId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || resource.data.businessOwnerId == request.auth.uid);
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (resource.data.userId == request.auth.uid || resource.data.businessOwnerId == request.auth.uid);
    }

    // Notifications
    match /users/{userId}/notifications/{notificationId} {
      allow read: if isOwner(userId);
      allow write: if false; // Only cloud functions/admin should write notifications
    }
    
    // Ratings & Reviews
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Loyalty
    match /loyalty/{loyaltyId} {
       allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || resource.data.businessOwnerId == request.auth.uid);
       allow write: if false; // Only backend updates points
    }

    // Gamification
    match /achievements/{id} {
        allow read: if true;
        allow write: if false;
    }
    
     match /leaderboard/{id} {
        allow read: if true;
        allow write: if false;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
